require 'html-proofer'

task :test do
  options = {
    :ignore_urls => [
        /http:\/\/localhost:4000\/.*/,
        /https:\/\/outlook\.office365\.com\/.*/,
        /https:\/\/.*linkedin\.com\/.*/,
        /https:\/\/stackoverflow\.com\/.*/
    ],
    :disable_external => false,
    :log_level => :info,
    :output_format => :junit,
    :output_file => 'build/reports/html-proofer.xml'
  }

  HTMLProofer.check_directory("./_site", options).run
end
